        <button onclick="navigateToRoute('/staff-info')">Staff Info</button>
        <button onclick="navigateToRoute('/business')">Business</button>
        <button onclick="navigateToRoute('/admins-data')">Admins Data</button>
        <button onclick="navigateToRoute('/is-kool-production')">Is-Kool Production</button>
        <button onclick="navigateToRoute('/doc-it-production')">Doc-it Production</button>
      </div>
    </div>

    <a href="/logout" class="logout-btn">
      <i class="fa-solid fa-right-from-bracket"></i> <span>Logout</span>
