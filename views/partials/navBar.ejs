<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bootstrap Navbar</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    /* Custom Styling */
    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }

    .dropdown-menu button {
      display: block;
      width: 100%;
      text-align: left;
      background: none;
      border: none;
      padding: 10px 15px;
      font-size: 14px;
      color: #374151;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .dropdown-menu button:hover {
      background-color: #2563eb;
      color: white;
    }

    .logout-btn {
      background-color: #ef4444;
      color: white !important;
      transition: background-color 0.3s ease;
    }

    .logout-btn:hover {
      background-color: #dc2626;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <!-- Brand -->
      <a class="navbar-brand" href="#">IS-Kool</a>

      <!-- Toggle Button for Mobile -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar Links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" href="/home"><i class="fas fa-house"></i> Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users"><i class="fas fa-users"></i> Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile"><i class="fas fa-user"></i> Profile</a>
          </li>
        </ul>

        <!-- Dropdown Menu -->
        <div class="dropdown me-3">
          <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-plus"></i> New
          </button>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
            <li><button onclick="navigateToRoute('/bug-page')">Bugs Data</button></li>
            <li><button onclick="navigateToRoute('/project-page')">Projects</button></li>
            <li><button onclick="navigateToRoute('/project-model')">Project Model</button></li>
            <li><button onclick="navigateToRoute('/school-data')">Schools Data</button></li>
            <li><button onclick="navigateToRoute('/staff-info')">Staff Info</button></li>
            <li><button onclick="navigateToRoute('/document-page')">Business Docs</button></li>
            <li><button onclick="navigateToRoute('/admins-data')">Admins Data</button></li>
            <li><button onclick="navigateToRoute('/is-kool-production')">Is-Kool Production</button></li>
            <li><button onclick="navigateToRoute('/doc-it-production')">Doc-it Production</button></li>
          </ul>
        </div>

        <!-- Logout Button -->
        <a href="/logout" class="btn logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </div>
    </div>
  </nav>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Navigate to Route
    function navigateToRoute(route) {
      window.location.href = route;
    }
  </script>
</body>

</html>
