<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include("./partials/title") %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding-top: 5rem;
    }

    .container {
      width: 100%;
      max-width: 900px;
      background-color: #fff;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      margin: 20px auto;
      text-align: center;
    }

    .navbar-brand {
      font-size: 20px;
      font-family: 'Brush Script MT', cursive;
    }

    .dropdown-menu button {
      display: block;
      width: 100%;
      text-align: left;
      background: none;
      border: none;
      padding: 10px 15px;
      font-size: 14px;
      color: #374151;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .dropdown-menu button:hover {
      background-color: #2563eb;
      color: white;
    }

    .logout-btn {
      background-color: #ef4444;
      color: white !important;
      transition: background-color 0.3s ease;
    }

    .logout-btn:hover {
      background-color: #dc2626;
    }

    .search-bar {
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    #taskSearch {
      width: 70%;
      padding: 12px;
      font-size: 14px;
      border-radius: 5px;
      border: 1px solid #ddd;
      box-sizing: border-box;
    }

    #taskSearch:focus {
      border-color: #5c67f2;
      outline: none;
    }

    button {
      background-color: #5c67f2;
      color: white;
      font-size: 16px;
      padding: 12px 20px;
      border-radius: 5px;
      cursor: pointer;
      border: none;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #4a54e1;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      border-radius: 8px;
      overflow: hidden;
    }

    table th,
    table td {
      padding: 12px;
      text-align: left;
      border: 1px solid #ddd;
    }

    table th {
      background-color: #f4f4f4;
      font-weight: bold;
      color: #333;
    }

    table tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    table tr:hover {
      background-color: #f1f1f1;
    }

    .task-actions a {
      color: #5c67f2;
      font-size: 14px;
      text-decoration: none;
      margin-right: 10px;
    }

    .task-actions a:hover {
      text-decoration: underline;
    }

    .form-popup {
      display: none;
      position: fixed;
      top: 10%;
      left: 50%;
      transform: translateX(-50%);
      background-color: #fff;
      padding: 25px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
      border-radius: 10px;
      z-index: 10;
      width: 400px;
      transition: transform 0.3s ease, opacity 0.3s ease;
      opacity: 0;
    }

    .form-popup.active {
      transform: translateX(-50%);
      opacity: 1;
    }

    .form-popup button {
      background-color: #28a745;
      border-radius: 5px;
      padding: 12px 20px;
    }

    .form-popup button.close-btn {
      background-color: #f44336;
    }

    .form-popup button:hover {
      background-color: #218838;
    }

    .form-popup button.close-btn:hover {
      background-color: #e03e36;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">TwinBots Docs</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" href="/home"><i class="fas fa-house"></i> Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/blogs"><i class="fas fa-newspaper"></i> Blogs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/ai"><i class="fas fa-robot"></i> AI</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile"><i class="fas fa-user"></i> Profile</a>
          </li>
        </ul>
        <div class="dropdown me-3">
          <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-plus"></i> New
          </button>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
            <li><button onclick="navigateToRoute('/staff-info')">Staff Info</button></li>
            <li><button onclick="navigateToRoute('/project-page')">Tasks</button></li>
            <li><button onclick="navigateToRoute('/project-model')">Project Model</button></li>
            <li><button onclick="navigateToRoute('/bug-page')">Bugs Data</button></li>
            <li><button onclick="navigateToRoute('/school-data')">Schools Data</button></li>
            <li><button onclick="navigateToRoute('/document-page')">Business Docs</button></li>
          </ul>
        </div>
        <a href="/logout" class="btn logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </div>
    </div>
  </nav>

  <!-- Main Container for Tasks -->
  <div class="container mt-5">
    <h1>Project Tasks</h1>
    <div class="search-bar d-flex justify-content-between mb-3">
      <input type="text" id="taskSearch" class="form-control" placeholder="Search tasks..." onkeyup="searchTasks()">
      <button class="btn btn-success" onclick="openForm()">Add Task</button>
    </div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Status</th>
          <th>Priority</th>
          <th>Due Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="tasksTable">
        <% tasks.forEach(task => { %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.status %></td>
          <td><%= task.priority %></td>
          <td><%= task.dueDate ? task.dueDate.toDateString() : 'N/A' %></td>
          <td class="task-actions">
            <a href="/edit-task/<%= task._id %>" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
            <a href="/delete-task/<%= task._id %>" class="btn btn-danger btn-sm">üóëÔ∏è Delete</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Form Popup -->
  <div class="form-popup" id="taskForm">
    <h2>Create New Task</h2>
    <form action="/create-task" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" id="title" name="title" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea id="description" name="description" class="form-control"></textarea>
      </div>
      <div class="mb-3">
        <label for="assignedTo" class="form-label">Assign To:</label>
        <select id="assignedTo" name="assignedTo" class="form-select" required>
          <option value="">Select Staff</option>
          <% staff.forEach(person => { %>
          <option value="<%= person._id %>"><%= person.firstName %> <%= person.lastName %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="status" class="form-label">Status:</label>
        <select id="status" name="status" class="form-select">
          <option value="Not Started">Not Started</option>
          <option value="In Progress">In Progress</option>
          <option value="Completed">Completed</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="priority" class="form-label">Priority:</label>
        <select id="priority" name="priority" class="form-select">
          <option value="Low">Low</option>
          <option value="Medium" selected>Medium</option>
          <option value="High">High</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="dueDate" class="form-label">Due Date:</label>
        <input type="date" id="dueDate" name="dueDate" class="form-control">
      </div>
      <button type="submit" class="btn btn-success">Create Task</button>
      <button type="button" class="btn btn-danger close-btn" onclick="closeForm()">Cancel</button>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function navigateToRoute(route) {
      window.location.href = route;
    }

    function openForm() {
      const form = document.getElementById("taskForm");
      form.style.display = "block";
      setTimeout(() => {
        form.classList.add("active");
      }, 10);
    }

    function closeForm() {
      const form = document.getElementById("taskForm");
      form.classList.remove("active");
      setTimeout(() => {
        form.style.display = "none";
      }, 300);
    }

    function searchTasks() {
      const query = document.getElementById("taskSearch").value.toLowerCase();
      const rows = document.querySelectorAll("#tasksTable tbody tr");
      rows.forEach(row => {
        const title = row.querySelector("td:nth-child(1)").innerText.toLowerCase();
        row.style.display = title.includes(query) ? "" : "none";
      });
    }
  </script>
</body>

</html>